@model List<ItemPedido>

    <h2> Listagem de Pedidos </h2>
    <table border="2">
        <thead>
     <tr>
         <th>Descrição</th>
         <th>Valor Unitário</th>
         <th>Quantidade</th>
     </tr>
     </thead>
     <tbody>
         @foreach (ItemPedido item in Model)
         {
             <tr>
                 <td>@item.Descricao</td>
                 <td>@item.ValorUnitario</td>
                 <td>@item.Quantidade</td>
             </tr>
         }
     </tbody>
    </table>
    <p>Total dos pedidos é: @Dados.Total()</p>